<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!--Theme.MaterialComponents.DayNight.DarkActionBar-->
    <style name="Theme.Testbank" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@android:color/white</item>
        <item name="colorOnPrimary">@color/color_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="Theme.Testbank.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Testbank.Splash">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_kakao</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="Theme.Testbank.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Testbank.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="tabStyle">
        <item name="tabRippleColor">@null</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorColor">@color/color_grey_900</item>
        <item name="tabMode">fixed</item>
        <item name="tabPaddingEnd">8dp</item>
        <item name="tabPaddingStart">8dp</item>
        <item name="tabTextColor">@color/color_grey_600</item>
        <item name="tabSelectedTextColor">@color/color_grey_900</item>
        <item name="tabGravity">start</item>
        <item name="android:tabStripEnabled">true</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>