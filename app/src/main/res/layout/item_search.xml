<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="item" type="com.example.testbank.repository.local.model.search.SearchModel" />
        <variable
            name="vm"
            type="com.example.testbank.view.main.home.search.SearchViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_search_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_search_thumbnail"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:imageUri="@{item.thumbnailUrl}"
            tools:src="@tools:sample/avatars"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_search_display_site_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:textSize="13dp"
            android:textStyle="bold"
            android:maxLines="3"
            android:ellipsize="end"
            android:textColor="@color/color_grey_900"
            app:layout_constraintStart_toEndOf="@id/item_search_thumbnail"
            app:layout_constraintEnd_toStartOf="@+id/item_search_like"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@{item.displaySiteName}"
            tools:text="@tools:sample/lorem/random"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_search_datetime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:textSize="13dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:textColor="@color/color_grey_600"
            app:layout_constraintStart_toEndOf="@id/item_search_thumbnail"
            app:layout_constraintTop_toBottomOf="@id/item_search_display_site_name"
            app:layout_constraintEnd_toStartOf="@+id/item_search_like"
            android:text="@{item.dateString()}"
            tools:text="@tools:sample/date/mmddyy"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_search_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:tint="@color/color_grey_600"
            app:imageId="@{item.like ? `ic_star_yellow_24dp` : `ic_star_border_yellow_24dp`}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="@{() -> vm.sendEvent(vm.EVENT_LIKE, item)}"
            tools:src="@drawable/ic_star_border_yellow_24dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
